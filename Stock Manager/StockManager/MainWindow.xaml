<Window x:Class="StockManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockManager"
        mc:Ignorable="d"
        Title="StockManager" Height="350" Width="525">
    <Window.Resources>
        <local:App x:Key="Stocks"></local:App>
    </Window.Resources>

    <Grid DataContext="{StaticResource Stocks}">
        <Grid.RowDefinitions>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="18*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <ListBox x:Name="StockDisplay" Grid.Row="0" 
                     ItemsSource="{Binding PresentationTraceSources.TraceLevel=High}"
                     Grid.RowSpan="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=RowDefinitions.Count, Mode=OneWay}" ></ListBox>
        </StackPanel>
    </Grid>
   
</Window>
